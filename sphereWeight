/*sphereWeight.cpp
 *Input sphere's radius (feet)
 *Input sphere's density (pounds/cubic feet)
 *Output sphere's Weight (pounds/tons)
 */

#include <iostream>
#include <cmath>
using namespace std;
int main()
{
    const double PI = 3.14159;
    cout << "Enter the sphere's radius (feet): ";
    double radius;
    cin >> radius;
    cout << "Enter its density (pounds/cubic feet): ";
    double density;
    cin >> density;
    double weight = density*4.0*PI*pow(radius,3)/3.0;
    cout << "\nThe weight of the sphere is approximately " << weight << " pounds," << endl;
    cout << "which is the same as " << weight/2000.0 << " tons." << endl;
}
